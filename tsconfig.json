{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "exactOptionalPropertyTypes": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src"]
}
